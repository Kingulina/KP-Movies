<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatag_bg"
        android:background="@drawable/avatag_bg"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatar_placeholder"/>

    <TextView
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/ivFilter"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/filter"
        app:tint="@color/black_87"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/filter_movies"/>

    <LinearLayout
        android:id="@+id/tabsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAvatar"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnWatched"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/watched"/>

        <Space
            android:layout_width="24dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btnWatchList"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="@string/watch_list"/>
    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollPosters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabsRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="no" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- pierwszy rząd -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#B83E3E"
                    app:layout_constraintDimensionRatio="2:3"
                    android:layout_weight="1"
                    android:contentDescription="@null" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#6A45D2"
                    app:layout_constraintDimensionRatio="2:3"
                    android:layout_weight="1"
                    android:contentDescription="@null" />
            </LinearLayout>

            <!-- odstęp -->
            <Space
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <!-- drugi rząd -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#14B8A6"
                    app:layout_constraintDimensionRatio="2:3"
                    android:layout_weight="1"
                    android:contentDescription="@null" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="0dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#861657"
                    app:layout_constraintDimensionRatio="2:3"
                    android:layout_weight="1"
                    android:contentDescription="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ───── DOLNA NAWIGACJA ───── -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/bottom_nav"
        app:labelVisibilityMode="labeled"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>